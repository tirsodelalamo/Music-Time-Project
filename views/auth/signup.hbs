<div class="login row justify-content-center">
    <div class="col-md-6">

        <h1 class="title-letter">Sign up</h1>

        <form action="/signup" method="POST">
            <div class="form-group">
                <label for="field1">Username</label>
                <input name="username" type="text" class="form-control text-center rq-form-element" id="field1">
            </div>
            <div class="form-group">
                <label for="field2">Password</label>
                <input name="password" type="password" class="form-control text-center rq-form-element" id="field2">
                <small class="form-text text-muted">Never ever ever in los ever share your password</small>
            </div>

            <button type="submit" class="btn btn-dark btn-block btn-lg">Sign up</button>

            {{#if errorMsg}}
            <div id="errorMsg">{{{errorMsg}}}</div>
            {{/if}}
        </form>

        <p>Already signed? <a href="/login">Login!</a></p>
    </div>
</div>